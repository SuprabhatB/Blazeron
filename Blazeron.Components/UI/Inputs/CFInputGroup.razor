<div class="@CombinedGroupStyle">
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string CSSClass { get; set; }

    string GroupStyle => UIConstants.InputGroupPrefix;
    string CombinedGroupStyle => string.Join(SeparatorConstants.SeparatedBySpaceOnly, GroupStyle, CSSClass).RemoveWhiteSpaces();
}
